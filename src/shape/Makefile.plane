		D3DXShapeParser.cxx \
		DXFOut.cxx \
		DXFParser.cxx \
		DataAccess.cxx \
		DataBase.cxx \
		DrawCache.cxx \
		Edge.cxx \
		FileInput.cxx \
		FileOutput.cxx \
		HRCParser.cxx \
		Half.cxx \
		History.cxx \
		IFSTexture.cxx \
		IFSetHandle.cxx \
		Image.cxx \
		ImageIO.cxx \
		IndexFace.cxx \
		Light.cxx \
		Line.cxx \
		Loop.cxx \
		MQOOut.cxx \
		MQOParser.cxx \
		MassProperty.cxx \
		MeshTexture.cxx \
		Modify.cxx \
		Operation.cxx \
		ParserBase.cxx \
