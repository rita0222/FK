#! /usr/bin/env perl

use Getopt::Std;

%opts = ();

getopts ("ir", \%opts);

foreach $svgName (@ARGV) {
	next if $svgName !~ /.svg$/;
	$pngName = $svgName;
	$pngName =~ s/.svg$/.png/;

	if($opts{"i"} == 1) {
	    $com = "inkscape --export-area-drawing --file=";
	    $com .= $svgName;
	    $com .= " --export-png=";
	    $com .= $pngName;
	} else {
	    $com = "rsvg-convert ";
	    $com .= $svgName;
	    $com .= " -z 0.8 --format=png -o ";
	    $com .= $pngName;
	}
	if(!(-f $pngName)) {
		system($com);
	}	
}

0;

